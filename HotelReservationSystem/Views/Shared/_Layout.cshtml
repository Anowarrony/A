@using System.Linq.Expressions
<!DOCTYPE html>
<html lang="en">
 
    
    
 <head>
        
        <link href="~/Content/styles.css" rel="stylesheet" />
        <link href="~/Content/menu.css" rel="stylesheet" />
        <meta name="viewport" content="width=device-width" />
       
    </head>
    <body>
        
      @Styles.Render("~/Content/css")
        
       
 <link href="~/Content/source/jquery.fancybox.css" rel="stylesheet" />
  <link href="~/Content/jquery-ui-1.9.2.custom.css" rel="stylesheet" />
<link href="~/Content/datePicker/jqx.base.css" rel="stylesheet" />
<link href="~/Content/sit.css" rel="stylesheet" />

<link href="~/Content/all.css" rel="stylesheet" />
<link href="~/Content/styles.css" rel="stylesheet" />
  <link href="~/Content/css/bootstrap.css" rel="stylesheet" />

        <header style="height: 70px;background: white">
            <div class="content-wrapper">
            
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                                  
                    <div id='cssmenu'>
                        <ul>
                            <li>@Html.ActionLink("Home", "Index", "Home",new{area=""},new{id="HomeLink"})</li>
                             <li>@Html.ActionLink("Image Gallery", "Gallery", "ImageGallery",new{area=""},new{id="ImageGalleryLink"})</li>
                            
                            <li><a href='#'><span>Log On</span></a>
                                <ul>
                                    <li id="menulist">@Html.ActionLink("UserLogOn", "LogOn", "LoginSignUp",new{area="Customer"},new{id="UserLogOnLink"})</li>
                                    <li id="menulis">@Html.ActionLink("AdminLogOn", "LogOn", "AdminLogOn",new{area="Admin"},new{id="AdminLogOnLink"})</li>
                                </ul>
        

                            </li>
                       <li>@Html.ActionLink("Policies & Facilities", "Index", "PoliciesAndFacilities",new{area=""},new{id="PoliciesLink"})</li>
                           
                            <li class='last'>@Html.ActionLink("Contact With Me", "AboutMe", "Home",new{area=""},new{id="ContactLink"})</li>
  
                        </ul>
                    </div>

                </div>
            </div>
        </header>
        

        <div id="body" >
            @RenderSection("featured", required: false)
        
               @RenderBody()
            
  <div  id="divLoading" style="display: none">
          
                     <img src="~/Images/ajax-loader.gif" style="background-position: center;position: relative;left: 40%;top: 10px"/><br /><br/>      
      </div>
        </div>
        <footer style="background: #ACE1AF;padding-bottom: -2%;bottom: 0px">
            <div class="content-wrapper">
                <div class="float-left">
                    <p>All Rght Preserved By:raselhossaingen@gmail.com</p>
                </div>
            </div>
        </footer>

            @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-1.7.1.js"></script>
     <script src="~/Scripts/jquery-ui-1.8.20.min.js"></script>
        <script src="~/Scripts/all.js"></script>
        <script src="~/Scripts/slide.js"></script>
        <script src="~/Scripts/script.js"></script>
        <script src="~/Content/source/jquery.fancybox.js"></script>
        <script src="~/Content/lib/jquery.mousewheel-3.0.6.pack.js"></script>

         <script>
             function loading() {
                 $('#divLoading').dialog({
                     title: '<span style="font-family:Courier New;"> Please Wait...</span>', open: function (event, ui) {
                         $(".ui-dialog-titlebar-close").hide();

                     }
                 });

             }

             $("#HomeLink,#ImageGalleryLink,#UserLogOnLink,#AdminLogOnLink,#PoliciesLink,#ContactLink").click(function () {
                 loading();
             });

        </script>
   
       
      
    </body>
</html>
