
@model IEnumerable<HotelReservationSystem.Models.ImagGallary>
<table id="kendoGrid" style="font-family: Arial">
    <thead>
          
        <tr>
            <th style="text-align: center">
                @Html.DisplayNameFor(model => model.First().Image)
            </th>
            <th style="text-align: center">
                @Html.DisplayNameFor(model => model.First().Description)
            </th>
            <th style="text-align: center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (IEnumerable<HotelReservationSystem.Models.ImagGallary>)ViewData["users"]) {
    
 
            <tr>
                <td>
                    <a href="data:image/jpg;base64,@Convert.ToBase64String(item.Image)" class="fancybox-effects-d" title="@item.Description">          <img src="data:image/jpg;base64,@Convert.ToBase64String(item.Image)" width="80px"/>    </a>  
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
         
                    @Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class = "lnkDelete button danger icon trash" })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $("#kendoGrid").kendoGrid({
        pageable: {
            refresh: true,
            pageSizes: true,
            buttonCount: 5
        }, dataSource: { pageSize: 5 }
        ,
        serverPaging: true,
    });
</script>