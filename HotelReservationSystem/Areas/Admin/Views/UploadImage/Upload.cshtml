



@model HotelReservationSystem.Models.ImageMetaData

@{
    
    ViewBag.Title = "Upload";
    Layout = "~/Areas/Admin/Views/UploadImage/_Upload.cshtml";
}

<link href="~/GithubCss/gh-buttons.css" rel="stylesheet" />

<link href="~/KendoUI/kendo.dataviz.default.min.css" rel="stylesheet" />
<link href="~/KendoUI/kendo.default.min.css" rel="stylesheet" />
<link href="~/KendoUI/kendo.common.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.9.2.custom.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Content/source/jquery.fancybox.js"></script>
<script src="~/Content/lib/jquery.mousewheel-3.0.6.pack.js"></script>
<script src="~/Scripts/dialog.js"></script>
<script src="~/Scripts/image.js"></script>
<script src="~/KendoUI/kendo.all.min.js"></script>

@using(Html.BeginForm("Upload","UploadImage",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div id="" style="border: 10px solid green;background: white;width:100%;height: 170px;">
    
    <table style="left: 24%;position: relative">
        <tr>
            <td>
                Select Image    <input type="file" name="File" id="file" class="btn btn-success"/>       
            </td>
            <td><span>@Html.ValidationMessageFor(m => m.File)</span></td>
        </tr>
        
        <tr>
            <td>
                Image Description @Html.TextBoxFor(m=>m.Description) 
            </td>
            <td style="text-align: left">@Html.ValidationMessageFor(m=>m.Description)</td>
        </tr>
        <tr>
            <td>
                 <input type="submit" value="Upload" class=" m" id="uploadButton" onclick="loading();"/>
       
            </td>
           
             </tr>
    </table>
    
                    
                    


  
 
   
</div>

    
}
@Html.Partial("_Image")

<div id="dialog-confirm" style="display: none">
<p style="font-family: Arial;font-size: 19px">
<span  style="float: left; margin: 0 7px 20px 0;"></span>
    <img src="~/Content/icon/warning(1).png" />
    Are you sure to delete?
</p>
</div>
 
<div id="dialog-edit" style="display: none">
</div>
<div id="dialog-detail" style="display: none">
</div>

